@inject NavigationManager NavigationManager;
@inject UserService UserService
@using TireCompany.Data

<head>
    <link href="css/header.css" rel="stylesheet" />
</head>
<aside>
    <p> TireCompany </p>
    <a @onclick="AddProduct">Добавить продукцию</a>
    <a @onclick="AddProductType">Добавить тип продукта</a>
    <a @onclick="AddMaterial">Материалы</a>
    @if (NavigationManager.Uri.Substring(NavigationManager.BaseUri.Length - 1) != "/mainpage")
    {
        <a @onclick="Main">На главную</a>
    }
   
    <a @onclick="Logout">Выйти из аккаунта</a>

</aside>


